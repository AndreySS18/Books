@page
@model Books.Pages.Search.IdModel
@{
}

<form method="post">
    @if (Model._errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model._errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
    }

    <label>Id:</label>
    <div class="input-group mb-3">
        <input type="text" min="0" class="form-control" placeholder="Id" name="BookId">
    </div>

    <div class="row mb-3">
        <div class="offset-sm-0 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Find Book</button>
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-0 col-sm-3 d-grid">
            <a class='btn btn-primary btn-sm' href='/HomePage'>HomePage</a>
        </div>
    </div>
</form>

<table class="table">
    <thread>
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Title</th>
            <th>Publishing</th>
            <th>Year</th>
            <th>Annotation</th>
        </tr>
    </thread>
    <tbody>
            <tr>
                <td>@Model.Books.id</td>
                <td>@Model.Books.Author</td>
                <td>@Model.Books.Title</td>
                <td>@Model.Books.Publising</td>
                <td>@Model.Books.Year</td>
                <td>@Model.Books.Annotation</td>
            </tr>
    </tbody>
</table>