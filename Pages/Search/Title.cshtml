@page
@model Books.Pages.Search.TitleModel
@{
}

<form method="post">
    @if (Model._errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model._errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
    }

    <label>Title:</label>
    <div class="input-group mb-3">
        <input type="text" min="0" class="form-control" placeholder="Title" name="BookTitle">
    </div>

    <div class="row mb-3">
        <div class="offset-sm-0 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Find Book</button>
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-0 col-sm-3 d-grid">
            <a class='btn btn-primary btn-sm' href='/HomePage'>HomePage</a>
        </div>
    </div>
</form>
<table class="table">
    <thread>
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Title</th>
            <th>Publishing</th>
            <th>Year</th>
            <th>Annotation</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model.BooksList)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.Author</td>
                <td>@item.Title</td>
                <td>@item.Publising</td>
                <td>@item.Year</td>
                <td>@item.Annotation</td>
            </tr>
        }
    </tbody>
</table>